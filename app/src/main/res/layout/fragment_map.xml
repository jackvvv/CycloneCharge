<?xml version="1.0" encoding="utf-8"?>
<com.sinia.cyclonecharge.libraryfragmenttransactionextended.SlidingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00ffffff">

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/icon_location" />

        <LinearLayout
            android:id="@+id/ll_jia_jian"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/view_center"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="110dp"
            android:layout_marginRight="20dp"
            android:background="@mipmap/bg_jiajian"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/jia"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@mipmap/jia" />

            <ImageView
                android:id="@+id/jian"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@mipmap/jian" />
        </LinearLayout>
    </FrameLayout>
</com.sinia.cyclonecharge.libraryfragmenttransactionextended.SlidingRelativeLayout>